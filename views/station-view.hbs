{{> menu}}
<style>
    .notification-container {
        display: flex;
        justify-content: space-around;
        gap: 2%;
    }

    .notification-container .notification {
        flex: 1;
    }

    .notification-wrapper {
        width: 100%;
        display: flex;
        flex-direction: column;
        margin-bottom: 20px;
    }

    .notification {
        display: flex;
       justify-content: space-around;
        gap: 15px;
    }

    .notification p {
        margin: 0 !important;
    }

    .icon {
        width: 64px;
        display: block;
    }
  
  .fa-solid {
        font-size: 64px;
    }

    .fa-location-dot {
        color: #572FC2;
    }

   .fa-cloud-sun {
        color: #C63729;
    }
  
    .fa-temperature-empty {
        color: #3977C9;
    }

    .fa-wind {
        color: #46AE3A;
    }
    .fa-arrows-to-dot{
        color: #E06F21;
    }
</style>

<div class="content box">

<div class="notification-container">
<section class="notification-wrapper">
        <div class="notification is-dark has-text-white">
            <div>
                <h2 class="is-size-5 has-text-weight-bold has-text-white">{{station.name}}</h2>
                <p>
                    Lat: {{station.latitude}}
                </p>
                <p>
                    Lng: {{station.longitude}}
                </p>
            </div>
            <span class="icon"><i class="fa-solid fa-location-dot"></i></span>
        </div>
    </section>

{{#if station.measures.length}}

  <section class="notification-wrapper">
    <div class="notification is-dark has-text-white">
      <div>
      <h2 class="is-size-5 has-text-weight-bold has-text-white">Weather</h2>
      <p>
      {{lastMeasure.code}}
      </p>
    </div>
    <span class="icon"><i class="fa-solid fa-cloud-sun"></i></span>
      </div>
  </section>
  
  <section class="notification-wrapper">
    <div class="notification is-dark has-text-white">
      <div>
      <h2 class="is-size-5 has-text-weight-bold has-text-white">Temperature</h2>
      <p>
        {{lastMeasure.temp}} °C
      </p>
      <p>
        {{toFahrenheit lastMeasure.temp}} °F
      </p>
      <p>Max: {{maxValue station.measures "temp"}}</p>
      <p>Min: {{minValue station.measures "temp"}}</p>
      </div>
      <span class="icon"><i class="fa-solid fa-temperature-empty"></i></span> 
    </div>
  </section>
  
  <section class="notification-wrapper">
    <div class="notification is-dark has-text-white">
      <div>
      <h2 class="is-size-5 has-text-weight-bold has-text-white">Wind</h2>
      <p>
        {{windSpeedToBeaufort lastMeasure.windSpeed}} bft
      </p>
      <p>
        {{degreeToName lastMeasure.windDirection}}
      </p>
      <p>
        Feels like {{windChill lastMeasure.temp lastMeasure.windSpeed}} °C
      </p>
        <p>Max: {{maxValue station.measures "windSpeed"}}</p>
      <p>Min: {{minValue station.measures "windSpeed"}}</p>
        </div>
        <span class="icon"><i class="fa-solid fa-wind"></i></span>
    </div>
  </section>
  
  <section class="notification-wrapper">
    <div class="notification is-dark has-text-white">
      <div>
      <h2 class="is-size-5 has-text-weight-bold has-text-white">Pressure</h2>
        <p>{{lastMeasure.pressure}} hpa</p>
        <p>Max: {{maxValue station.measures "pressure"}}</p>
      <p>Min: {{minValue station.measures "pressure"}}</p>
    </div>
      <span class="icon"><i class="fa-solid fa-arrows-to-dot"></i></span>
        </div>
  </section>
</div>

{{> list-measures}}

 {{else}}

</div>

<p>No measures available</p>


{{/if}}
  
  

{{> add-measure}}

</div>